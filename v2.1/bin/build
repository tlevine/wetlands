#!/bin/sh
set -e

# Schema
sqlite3 /tmp/wetlands.db < "$WETLANDS_ROOT/schema.sql"

# Listing
python2 "$WETLANDS_ROOT/src/listing.py"

# Public notice
for permitApplicationNumber in $(sqlite3 /tmp/wetlands.db 'SELECT permitApplicationNumber FROM application WHERE pdfParsed != 1;'); do
    build_public_notice "$permitApplicationNumber"
done
